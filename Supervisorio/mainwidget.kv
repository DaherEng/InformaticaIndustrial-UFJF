#:kivy 1.11.1

<MainWidget>:
    BoxLayout:
        orientation:'vertical'
        canvas:
            Color:
                rgb: 0.5,0.5,0.5
            Rectangle:
                size: self.size
        BoxLayout:
            orientation:'horizontal'
            size_hint: (1,0.1)
            spacing: 10
            Label:
                text: 'Supervisório Esteira'
                size_hint_x: None
                width: 300
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: None
                width: 400
                Label:
                    text: 'Configurações'
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: 'MODBUS'
                    Button:
                        text: 'Scan Time'
            Image:
                id: img_con
                size_hint_x: None
                width: 80
                source: 'imgs/botaoOff.png'
                pos_hint: {'top':1,'right':1}
        FloatLayout:
            canvas:
                Color:
                    rgb: 0.5,0.5,0.5
                Rectangle:
                    size: self.size
            Image:
                source: 'imgs/base.png'
            
            VarLabel:
                id: velocidade
                pos_hint: {'x': -0.45, 'y': 0}
            VarLabel:
                id: tensaoRN
                pos_hint: {'x': -0.45, 'y': 0.10}
            VarLabel:
                id: tensaoSN
                pos_hint: {'x': -0.45, 'y': 0.10}
            VarLabel:
                id: tensaoTN
                pos_hint: {'x': -0.45, 'y': 0.10}
            VarLabel:
                id: temperatura_carcaca
                pos_hint: {'x': -0.45, 'y': 0.10}
            VarLabel:
                id: freq_rede
                pos_hint: {'x': -0.45, 'y': 0.10}
            VarLabel:
                id: correnteR
                pos_hint: {'x': -0.45, 'y': 0.10}
            VarLabel:
                id: correnteS
                pos_hint: {'x': -0.45, 'y': 0.10}
            VarLabel:
                id: correnteT
                pos_hint: {'x': -0.45, 'y': 0.10}
            VarLabel:
                id: correnteN
                pos_hint: {'x': -0.45, 'y': 0.10}
            
            
            

<VarLabel@Label>:
    text: '-.-'
    font_size: 20
    bold: True
    halign: 'center'
    color: 0,0,0,1
